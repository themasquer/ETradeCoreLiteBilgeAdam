@model DataAccess.Entities.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit" enctype="multipart/form-data" autocomplete="off">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
                <label asp-for="Description" class="col-2 col-form-label"></label>
				<div class="col-5">
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="UnitPrice" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="UnitPrice" class="form-control" />
					<span asp-validation-for="UnitPrice" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
                <label asp-for="StockAmount" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="StockAmount" class="form-control" />
					<span asp-validation-for="StockAmount" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="ExpirationDate" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="ExpirationDate" class="form-control date" type="text" />
					<span asp-validation-for="ExpirationDate" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="CategoryId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="CategoryId" class="form-control select" asp-items="ViewBag.CategoryId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
                <label asp-for="StoreIds" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select multiple asp-for="StoreIds" class="form-control select" asp-items="ViewBag.Stores"></select>
					<span asp-validation-for="StoreIds" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
                <label asp-for="ImageTagSrcDisplay" class="col-2 col-form-label"></label>
                <div class="col-5">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageTagSrcDisplay))
                    {
                        <img src="@Model.ImageTagSrcDisplay" class="img-fluid" />
                    }
                    <input type="file" name="image" class="form-control" accept="@AppSettings.AcceptedImageExtensions" />
                    <input type="hidden" asp-for="ImageExtension" />
                    <a asp-action="DeleteImage" asp-route-id="@Model.Id">Delete Image</a>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
	<link rel="stylesheet" href="/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" />
    <script src="/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

	<link rel="stylesheet" href="/lib/select2/css/select2.min.css" />
    <script src="/lib/select2/js/select2.min.js"></script>

	<script>
		$(function () {
			$(".date").datepicker({
				todayBtn: "linked",
                orientation: "top auto",
                autoclose: true,
                todayHighlight: true
			});

			$(".select").select2();
		});
	</script>
}